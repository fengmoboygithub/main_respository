<mapper namespace="com.zzjs.cms.dao.FolderDao">

	<!-- ############################## -->
	<!-- ###### 增加 ###### -->
	<!-- ############################## -->

	<insert id="addFolder" parameterType="com.zzjs.cms.entity.Folder">
		insert into
		folder(siteId,fatherId,ename,name,path,level,sort,status,createTime)
		value(#{siteId},#{fatherId},#{ename},#{name},#{path},#{level},#{sort},#{status},#{createTime})
		<selectKey resultType="long" keyProperty="folderId">
			SELECT
			LAST_INSERT_ID()
		</selectKey>
	</insert>

	<!-- ############################## -->
	<!-- ###### 删除 ###### -->
	<!-- ############################## -->

	<delete id="deleteFolder" parameterType="long">
		delete from folder
		where
		folderId=#{folderId}
	</delete>

	<!-- ############################## -->
	<!-- ###### 修改 ###### -->
	<!-- ############################## -->
	<update id="updateSort" parameterType="long">
		update folder set
		sort=#{sort} where folderId=#{folderId}
	</update>

	<update id="updateCount">
		update folder set count=#{count} where
		folderId=#{folderId}
	</update>

	<update id="updatePath">
		update folder set path=#{path} where
		folderId=#{folderId}
	</update>
	
	<update id="updateFolderById">
		update folder set name=#{name},ename=#{ename},status=#{status} where folderId=#{folderId}
	</update>

	<!-- ############################## -->
	<!-- ###### 查询 ###### -->
	<!-- ############################## -->

	<select id="getFolderById" resultType="com.zzjs.cms.entity.vo.FolderVo">
		select * from folder where
		folderId=#{folderId}
	</select>
	<select id="getRootFolderBySiteId" resultType="com.zzjs.cms.entity.vo.FolderVo">
		select * from folder where
		siteId=#{siteId} and fatherId=0
	</select>

	<select id="getFolderListByFatherId" resultType="com.zzjs.cms.entity.vo.FolderVo">
		select * from folder where siteId=#{siteId} and fatherId=#{fatherId} 
		<if test="status !=null">and status = #{status}</if>
		order by sort
	</select>

	<select id="getAllFolderList" resultType="com.zzjs.cms.entity.vo.FolderVo">
		select * from folder where siteId=#{siteId} order by path,sort
	</select>

	<select id="getFolderByEname" resultType="com.zzjs.cms.entity.Folder">
		select * from folder
		where ename=#{ename} and fatherId=#{fatherId}
	</select>

</mapper>  
