<mapper namespace="com.zzjs.cms.dao.MediaDao">

	<!-- ############################## -->
	<!-- ###### 增加 ###### -->
	<!-- ############################## -->

	<insert id="addMedia" parameterType="com.zzjs.cms.entity.Media">
		insert into
		media(name,path,size,suffix,type,createTime)
		value(#{name},#{path},#{size},#{suffix},#{type},#{createTime})
		<selectKey resultType="long" keyProperty="mediaId">
			SELECT
			LAST_INSERT_ID()
		</selectKey>
	</insert>

	<!-- ############################## -->
	<!-- ###### 删除 ###### -->
	<!-- ############################## -->

	<delete id="deleteMedia" parameterType="long">
		delete from
		media where mediaId=#{mediaId}
	</delete>

	<!-- ############################## -->
	<!-- ###### 修改 ###### -->
	<!-- ############################## -->

	<update id="updateLinkByMediaId">
		update media
		set
		link=#{link}
		where
		mediaId=#{mediaId}
	</update>
	
	<update id="updateNameByMediaId">
		update media
		set
		name=#{name}
		where
		mediaId=#{mediaId}
	</update>

	<!-- ############################## -->
	<!-- ###### 查询 ###### -->
	<!-- ############################## -->

	<select id="getMediaById" parameterType="long"
		resultType="com.zzjs.cms.entity.vo.MediaVo">
		select * from media where mediaId=#{mediaId}
	</select>

	<select id="getMediaListBySiteId" resultType="com.zzjs.cms.entity.vo.MediaVo">
		select m.*,f.folderId
			from
			media m join media_entity_rela mer on m.mediaId=mer.mediaId
			join folder f on f.folderId=mer.entityId  
		where f.siteId=#{siteId}
			and mer.entity = #{entity}
			and m.type = #{type}
	</select>
	
	<select id="getMediaListAll" resultType="com.zzjs.cms.entity.vo.MediaVo">
		select * from media order by createTime desc limit #{offset},#{rows}
	</select>
	
	
	
</mapper>  
