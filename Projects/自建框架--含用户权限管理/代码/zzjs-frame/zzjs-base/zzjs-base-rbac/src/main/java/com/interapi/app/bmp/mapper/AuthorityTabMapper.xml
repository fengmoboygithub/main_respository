  <select id="getAuthorityTabListByUserId" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from authority_tab at where 
	EXISTS(select 1 from (select authority_id from role_authority_rela rat where EXISTS(select 1 from 
		(select r.id,r.name from role_tab r where 
		EXISTS(select 1 from user_role_rela u where u.ROLE_ID=r.ID 
		and u.user_id = #{id} ) 
		and r.IS_DELETE='1') rt where rt.id=rat.role_id
	)) urat where at.id=urat.authority_id ) 
	and at.IS_DELETE='1'
